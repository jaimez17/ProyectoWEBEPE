<%- model_class = Usuario -%>
<div class="page-header">
  <h1>Editar Usuarios</h1>
</div>

<dl class="dl-horizontal">
  <dt>Usuario</dt>
  <dd><%= @usuario.codigo %></dd>
  <dt>Apellido Paterno</dt>
  <dd><%= @usuario.apellido_paterno %></dd>
  <dt>Apellido Materno</dt>
  <dd><%= @usuario.apellido_materno %></dd>
  <dt>Primer Nombre</dt>
  <dd><%= @usuario.primer_nombre %></dd>
  <dt>Segundo Nombre</dt>
  <dd><%= @usuario.segundo_nombre %></dd>
  
</dl>

<%= link_to t('.back', :default => "Regresar"),
              usuarios_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => "Editar"),
              edit_usuario_path(@usuario), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => "Eliminar"),
              usuarios_path(@usuario),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Esta seguro de eliminar?')) },
              :class => 'btn btn-danger' %>
